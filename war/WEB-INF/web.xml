<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

	<servlet>
		<servlet-name>Fetchdata</servlet-name>
		<servlet-class>ameshforecast.Fetchdata</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Fetchdata</servlet-name>
		<url-pattern>/fetch</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ShowGif</servlet-name>
		<servlet-class>ameshforecast.ShowGif</servlet-class>
	</servlet>
		<servlet-mapping>
		<servlet-name>ShowGif</servlet-name>
		<url-pattern>*.gif</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>DateTimes</servlet-name>
		<servlet-class>ameshforecast.DateTimes</servlet-class>
	</servlet>
		<servlet-mapping>
		<servlet-name>DateTimes</servlet-name>
		<url-pattern>/datetimes</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
